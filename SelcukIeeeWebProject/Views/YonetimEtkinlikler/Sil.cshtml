@model Etkinliks
@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-heading border bottom">
                <h4 class="card-title text-center">Yeni Etkinlik Ekle</h4>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-md-9 ml-auto mr-auto">
                        <form asp-controller="YonetimEtkinlikler" asp-action="Sil" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">
                            <div class="form-group">
                                <label>Etkinlik Ad</label>
                                <input type="text" class="form-control" asp-for="EtkinlikAd" value="@Model.EtkinlikAd" readonly>
                            </div>
                            <div class="form-group">
                                <label>Etkinlik Tarihi</label>
                                <input type="text" class="form-control" asp-for="Tarih" value="@Model.Tarih" readonly>
                            </div>
                            <div class="form-group">
                                <label>Etkinlik Açıklama</label>
                                <input type="text" class="form-control" asp-for="EtkinlikAciklama" value="@Model.EtkinlikAciklama" readonly>
                            </div>
                            <center><button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Etkinlik Sil</button></center>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

