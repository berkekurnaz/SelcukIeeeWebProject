@model IEnumerable<Iletisims>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>

<div class="main-content">
    <div class="container-fluid">

        @if (Model.Count() > 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Gelen Mesajlar Listesi</h4>
                            <div class="table-overflow table-responsive">
                                <table id="myTable" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Ad Soyad</th>
                                            <th>Başlık</th>
                                            <th>Tarih</th>
                                            <th>Durum</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            @if (item.AdSoyad.Length > 30)
                                            {
                                                <td>@item.AdSoyad.Substring(0, 30)</td>
                                            }
                                            else
                                            {
                                                <td>@item.AdSoyad</td>
                                            }
                                            @if (item.Baslik.Length > 30)
                                            {
                                                <td>@item.Baslik.Substring(0, 30)</td>
                                            }
                                            else
                                            {
                                                <td>@item.Baslik</td>
                                            }
                                            <td>@item.Tarih</td>
                                            <td>@item.Durum</td>
                                            <td>
                                                <a href="/YonetimIletisim/Incele/@item.Id" class="btn btn-info btn-sm"><i class="fa fa-bookmark-o" aria-hidden="true"></i> İncele</a>
                                                <a href="/YonetimIletisim/Sil/@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Uyarı Kutusu</h4>
                    <div class="mrg-top-20">
                        <p>Burada Herhangi Bir İçerik Bulunmamaktadır...</p>
                    </div>
                </div>
            </div>
        }


    </div>
</div>


