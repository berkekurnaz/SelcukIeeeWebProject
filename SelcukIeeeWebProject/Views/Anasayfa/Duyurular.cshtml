@model IEnumerable<Duyurulars>
@{
    ViewData["Title"] = "Duyurular";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<!-- Start Ieee Nedir Area -->
<section class="team-area section-gap" id="team">
    <div class="container">

        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-40 col-lg-8">
                <div class="title text-center" id="yonet-title">
                    <h1 class="mb-10">Duyurular</h1>
                    <hr>
                </div>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <center>
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 text-center">
                                    @if (item.Baslik.Length > 50)
                                    {
                                        <p>@item.Baslik.Substring(0, 50) ...</p>
                                    }
                                    else
                                    {
                                        <p>@item.Baslik</p>

                                    }
                                </div>
                                <div class="col-md-3 text-center">
                                    <p>Eklenme Tarihi : @item.Tarih</p>
                                </div>
                                <div class="col-md-3">
                                    <center><a href="/Anasayfa/DuyuruDetay/@item.Id" class="btn btn-outline-info">Duyuru Oku</a></center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </center>
        }

    </div>
</section>
<!-- End Ieee Nedir Area -->
