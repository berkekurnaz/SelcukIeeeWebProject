@model IEnumerable<EtkinlikFotografs>
@{
    ViewData["Title"] = "Fotograflar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>

<div class="main-content">
    <div class="container-fluid">

        @if (Model.Count() > 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Etkinliğe Ait Fotoğraflar Listesi</h4>
                            <div class="table-overflow table-responsive">
                                <table id="myTable" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Fotoğraf Adı</th>
                                            <th>Fotoğraf</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @if (item.Ad.Length > 30)
                                                {
                                                    <td>@item.Ad.Substring(0, 30)</td>
                                                }
                                                else
                                                {
                                                    <td>@item.Ad</td>
                                                }
                                                <td><img src="~/img/etkinlikler/@item.Fotograf" width="250" /></td>
                                                <td>
                                                    <a href="/YonetimFotograflar/Incele/@item.Id" class="btn btn-info btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i> İncele</a>
                                                    <a href="/YonetimFotograflar/Guncelle/@item.Id" class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i> Güncelle</a>
                                                    <a href="/YonetimFotograflar/Sil/@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Uyarı Kutusu</h4>
                    <div class="mrg-top-20">
                        <p>Burada Herhangi Bir İçerik Bulunmamaktadır...</p>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

